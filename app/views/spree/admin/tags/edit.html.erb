<% content_for :page_title do %>
  <%= t('editing_tag') %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to t('back_to_tags'), spree.admin_tags_path, icon: 'arrow-left' %>
<% end %>

<%= render 'spree/shared/error_messages', target: @tag %>

<%= form_for [:admin, @tag] do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_tags_method_edit_form_buttons">
      <%= render partial: 'spree/admin/shared/edit_resource_links' %>
    </div>
  </fieldset>
<% end %>
